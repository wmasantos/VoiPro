<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialer_background">

    <TextView
        android:id="@+id/tvDialerDisplay"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="1"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="2"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="3"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="4"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="5"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="6"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="7"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="8"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="9"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="*"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="0"
                android:layout_marginRight="20dp"/>

            <TextView
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/selector_dialer_buttom"
                android:text="#"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>